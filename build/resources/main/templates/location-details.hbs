    <li class="nav-item"><a class="nav-link" href="/location/new">New Sighting</a>
{{/partial}}

{{#partial "preContent"}}
        <div class="jumbotron jumbotrion-fluid ranger-jumbotron">
            <div class="container">
                <h1 class="display-3">World Life Support!</h1>
                <p class="lead">Help Conserve The Fauna</p>
            </div>
        </div>
{{/partial}}

{{#partial "content"}}
    <h2 class="text-center"><u><b>{{location}}</b></u></h2>
    <h4 class="text-center">Animals Sighted In This Region</h4>
    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal Sighted</th>
            <th scope="col">Time</th>
            <th scope="col">Ranger</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{animalName}}</td>
                <td>{{readableTimestamp}}</td>
                <td><a href="/rangers/{{rangerid}}/details">{{rangerName}}</a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

